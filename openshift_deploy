
if [[ "$1" == "-q" ]] || [[ "$1" == "-Q" ]]; then
	QUICK="$1"
	MESSAGE=""
else
	MESSAGE="$1"
	QUICK="$2"
fi

if [[ -z "$MESSAGE" ]]; then
	MESSAGE="deployed on `date`"
fi

echo "[info] running: git add . -A"
git add . -A

echo "[info] running: git commit -m \"$MESSAGE\""
git commit -m "$MESSAGE"

echo "[info] running: git push shift"
git push shift